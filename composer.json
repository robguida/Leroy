{
    "name": "robguida/leroy",
    "description": "A common-sense framework for most PHP projects",
    "type": "package",
    "authors": [
        {
            "name": "Rob Guida",
            "email": "robguida4@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.6.0",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4@dev",
        "phpspec/phpspec": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Leroy\\":"src/",
            "LeroyTest\\":"test/UnitTests/",
            "LeroyTestLib\\":"test/lib/",
            "LeroyTestResource\\":"test/test_resources/"
        }
    }
}